<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dictionaries_row"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dictionaryRowIcon"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_toRightOf="@+id/dictionaryRowIcon"
        android:layout_marginLeft="10dp"
        android:id="@+id/dictionaryTitle"
        android:textColor="@color/lightGrey"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:maxWidth="250dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/manageDictionaryBtn"
        android:src="@drawable/fa_minus_circle"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:padding="3dp" />
</RelativeLayout>